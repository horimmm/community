<%= form_with model: @commu, url: { action: :create }, class: "new_commu", local: true do |f| %>
      <% if @commu.errors.any? %>
        <p class="text-danger">タイトルは1～30文字以内で入力してください</p>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: "form-control commuName", placeholder: "コミュニティー名" %>
      <%= f.label :caption %>
      <%= f.text_area :caption, class: "form-control commuCaption", placeholder: "説明文" %>

      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
